<views:BasePage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.EditorPage"
    xmlns:views="clr-namespace:Maui.Controls.Sample.Pages.Base"
    Title="Editor">
    <views:BasePage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="12">
                <Label
                    Text="Basic"
                    Style="{StaticResource Headline}" />
                <Editor />
                <Label
                    Text="Disabled"
                    Style="{StaticResource Headline}"/>
                <Editor
                    Text="I am disabled"
                    IsEnabled="False"/>
                <Label
                    Text="Using TextColor"
                    Style="{StaticResource Headline}" />
                <Editor 
                    Text="Text"
                    TextColor="Purple"/>
                <Label
                    Text="With Placeholder"
                    Style="{StaticResource Headline}" />
                <Editor 
                    Placeholder="Placeholder"/>
                <Label
                    Text="Using PlaceholderColor"
                    Style="{StaticResource Headline}" />
                <Editor 
                    PlaceholderColor="Purple"
                    Placeholder="Placeholder"/>
                <Label
                    Text="With Text"
                    Style="{StaticResource Headline}" />
                <Editor 
                    Text="Text"/>
                <Label
                    Text="ClearButtonVisibility = Never"
                    Style="{StaticResource Headline}" />
                <Label
                    Text="Read-only"
                    Style="{StaticResource Headline}" />
                <Editor 
                    Text="I am read only" 
                    IsReadOnly="True"/>
                <Label
                    Text="Focus"
                    Style="{StaticResource Headline}" />
                <Editor 
                    Focused="OnEditorFocused"/>
                <Label
                    Text="Unfocus"
                    Style="{StaticResource Headline}" />
                <Editor 
                    Unfocused="OnEditorUnfocused"/>
                <Label
                    Text="Completed"
                    Style="{StaticResource Headline}" />
                <Editor 
                    Completed="OnEditorCompleted"/>
                <Label
                    Text="BackgroundColor"
                    Style="{StaticResource Headline}" />
                <Editor 
                    Text="Text"
                    BackgroundColor="Orange"/>
                <Label
                    Text="Background"
                    Style="{StaticResource Headline}" />
                <Editor 
                    Text="Background">
                    <Editor.Background>
                        <LinearGradientBrush EndPoint="1,0">
                            <GradientStop Color="Yellow"
                                          Offset="0.1" />
                            <GradientStop Color="Green"
                                          Offset="1.0" />
                        </LinearGradientBrush>
                    </Editor.Background>
                </Editor>
                <Label
                    Text="Keyboard Numeric"
                    Style="{StaticResource Headline}" />
                <Editor 
                    Text="123"
                    Keyboard="Numeric"/>
                <Label
                    Text="Cursor position"
                    Style="{StaticResource Headline}"/>
                <Editor
                    Text="Cursor position"
                    CursorPosition="2"/>
                <Label
                    Text="HorizontalTextAlignment"
                    Style="{StaticResource Headline}" />
                <Editor 
                    HorizontalTextAlignment="End"
                    Text="This should be on the end" />
                <Label
                    Text="VerticalTextAlignment"
                    Style="{StaticResource Headline}" />
                <Editor 
                    VerticalTextAlignment="End"
                    Text="This should be on the bottom"
                    HeightRequest="100"/>
                <Label
                    Text="Auto Size with Text Changes"
                    Style="{StaticResource Headline}" />
                <Editor AutoSize="TextChanges"  />
            </VerticalStackLayout>
        </ScrollView>
    </views:BasePage.Content>
</views:BasePage>
